        <FrameLayout
            android:id="@+id/flProfile"
            android:layout_width="@dimen/dimension110dp"
            android:layout_height="@dimen/dimension110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimension40dp"

            >

            <com.mindyourelders.MyHealthCareWishes.customview.RoundedImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/dimension100dp"
                android:layout_height="@dimen/dimension100dp"
                android:src="@drawable/ic_profile_default" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:layout_gravity="top|right"
                android:src="@drawable/ic_edit_blue" />
        </FrameLayout>

    <RelativeLayout
        android:id="@+id/llCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension60dp"
        android:layout_below="@+id/flProfile"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/dimension20dp"
        android:background="@color/colorWhite"
        android:layout_marginLeft="@dimen/dimension20dp"
        android:layout_marginTop="@dimen/dimension10dp"
        >
        <TextView
            android:id="@+id/txtCard"
            style="@style/EmergencyCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Business Card"
            android:textColor="@color/colorBlue"
            android:padding="@dimen/dimension10dp"
            android:paddingRight="@dimen/dimension20dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimension10dp"
            />
        <RelativeLayout
            android:id="@+id/rlCard"
            android:layout_width="@dimen/dimension90dp"
            android:layout_height="@dimen/dimension60dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="@dimen/dimension80dp"
                android:layout_height="@dimen/dimension50dp"
                android:src="@drawable/busi_card"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dimension20dp"
                android:background="@android:color/transparent"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/imgEditCard"
                android:layout_width="@dimen/dimension30dp"
                android:layout_height="@dimen/dimension30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_edit_blue"
                />
        </RelativeLayout>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llCard"
            android:layout_marginTop="@dimen/dimension22dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:paddingBottom="@dimen/dimension8dp"
            android:paddingLeft="@dimen/dimension30dp"
            android:paddingRight="@dimen/dimension30dp"
            android:paddingTop="@dimen/dimension8dp"
            android:gravity="bottom"

            >
            <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
            <AutoCompleteTextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingTop="@dimen/dimension10dp"
                android:paddingBottom="@dimen/dimension10dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimension20dp"
                android:imeOptions="actionNext"
                /><requestFocus />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlRelation"
            android:paddingBottom="@dimen/dimension8dp"
            android:paddingLeft="@dimen/dimension30dp"
            android:paddingRight="@dimen/dimension30dp"
            android:gravity="bottom"
            >
            <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
            <AutoCompleteTextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingTop="@dimen/dimension10dp"
                android:paddingBottom="@dimen/dimension10dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimension20dp"
                android:imeOptions="actionNext"
                /><requestFocus />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilAddres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilWorkPhone"
            android:paddingBottom="@dimen/dimension8dp"
            android:paddingLeft="@dimen/dimension30dp"
            android:paddingRight="@dimen/dimension30dp"
            android:gravity="bottom"
            >

            <AutoCompleteTextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingTop="@dimen/dimension10dp"
                android:paddingBottom="@dimen/dimension10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimension20dp"
                android:imeOptions="actionNext"
                /><requestFocus />
        </android.support.design.widget.TextInputLayout>
       <View
           android:id="@+id/view2"
           android:layout_height="@dimen/dimension20dp"
           android:layout_width="match_parent"
           android:layout_marginBottom="@dimen/dimension15dp"
           android:layout_marginTop="@dimen/dimension15dp"
           android:background="@color/colorLightGray"
           android:layout_below="@+id/tilAddres"
           />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilAddres"
            android:paddingBottom="@dimen/dimension8dp"
            android:paddingLeft="@dimen/dimension30dp"
            android:paddingRight="@dimen/dimension30dp"
            android:visibility="gone">
            <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
            <AutoCompleteTextView
                android:id="@+id/txtCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimension10dp"
                android:drawableRight="@drawable/ic_droupdown_arrow"
                android:hint="Country"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingTop="@dimen/dimension2dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimension20dp"
                android:imeOptions="actionNext"
                /><requestFocus />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilEmail"
            android:paddingBottom="@dimen/dimension8dp"
            android:paddingLeft="@dimen/dimension30dp"
            android:paddingRight="@dimen/dimension30dp"
            android:gravity="bottom"
            >
            <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
            <AutoCompleteTextView
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Phone"
                android:inputType="phone"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingTop="@dimen/dimension10dp"
                android:paddingBottom="@dimen/dimension10dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimension20dp"
                android:imeOptions="actionNext"
                /><requestFocus />
        </android.support.design.widget.TextInputLayout>
       <android.support.design.widget.TextInputLayout
           android:id="@+id/tilHomePhone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tilPhone"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:gravity="bottom"
           >
           <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
           <AutoCompleteTextView
               android:id="@+id/txtHomePhone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Home Phone"
               android:inputType="phone"
               android:maxLength="12"
               android:maxLines="1"
               android:paddingBottom="@dimen/dimension10dp"
               android:paddingLeft="@dimen/dimension15dp"
               android:paddingTop="@dimen/dimension10dp"
               android:singleLine="true"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="@dimen/dimension20dp"
               android:imeOptions="actionNext"
               /><requestFocus />
       </android.support.design.widget.TextInputLayout>
       <android.support.design.widget.TextInputLayout
           android:id="@+id/tilWorkPhone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tilHomePhone"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:gravity="bottom"
           android:visibility="gone"
           >
           <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
           <AutoCompleteTextView
               android:id="@+id/txtWorkPhone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Work Phone"
               android:inputType="phone"
               android:maxLength="12"
               android:maxLines="1"
               android:paddingLeft="@dimen/dimension15dp"
               android:paddingTop="@dimen/dimension10dp"
               android:paddingBottom="@dimen/dimension10dp"
               android:singleLine="true"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="@dimen/dimension20dp"
               android:imeOptions="actionNext"
               /><requestFocus />
       </android.support.design.widget.TextInputLayout>
       <RelativeLayout
           android:id="@+id/rlRelation"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tilName"
           >
       <com.mindyourelders.MyHealthCareWishes.customview.MySpinner
           android:id="@+id/spinnerRelation"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dimension35dp"
           android:layout_marginRight="@dimen/dimension35dp"
           app:ms_arrowColor="@color/colorBlue"
           app:ms_arrowSize="16dp"
           app:ms_floatingLabelText="Relationship"
           app:ms_hint="hint"
           app:ms_multiline="true"
           custom:ms_floatingLabelColor="@color/colorBlue"
           custom:ms_hintColor="@color/colorDarkGray"

           android:visibility="gone"
           />
           <android.support.design.widget.TextInputLayout
               android:id="@+id/tilOtherRelation"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:descendantFocusability="beforeDescendants"
               android:focusableInTouchMode="true"
               android:layout_below="@+id/spinnerRelation"
               android:paddingBottom="@dimen/dimension8dp"
               app:hintEnabled="false"
               android:paddingLeft="@dimen/dimension30dp"
               android:paddingRight="@dimen/dimension30dp"
               android:paddingTop="@dimen/dimension8dp"
               android:visibility="gone">
               <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
               <AutoCompleteTextView
                   android:id="@+id/txtOtherRelation"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:maxLength="30"
                   android:maxLines="1"
                   android:paddingLeft="@dimen/dimension15dp"
                   android:paddingTop="@dimen/dimension2dp"
                   android:singleLine="true"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimension20dp"
                   android:imeOptions="actionNext"
                   /><requestFocus />
           </android.support.design.widget.TextInputLayout>
       </RelativeLayout>
       <com.mindyourelders.MyHealthCareWishes.customview.MySpinner
           android:id="@+id/spinner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tilPhone"
           android:layout_marginLeft="@dimen/dimension35dp"
           android:layout_marginRight="@dimen/dimension35dp"
           app:ms_arrowColor="@color/colorBlue"
           app:ms_arrowSize="16dp"
           app:ms_floatingLabelText="Country"
           app:ms_hint="hint"
           app:ms_multiline="true"
           custom:ms_floatingLabelColor="@color/colorBlue"
           custom:ms_hintColor="@color/colorDarkGray"
           android:visibility="gone"
           />
       <android.support.design.widget.TextInputLayout
           android:id="@+id/tilGender"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_below="@+id/tilBdate"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:focusable="false"
           android:gravity="bottom"
           >
           <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
           <AutoCompleteTextView
               android:id="@+id/txtGender"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusable="false"
               android:hint="Gender"
               android:maxLength="30"
               android:maxLines="1"
               android:paddingLeft="@dimen/dimension15dp"
               android:paddingTop="@dimen/dimension10dp"
               android:paddingBottom="@dimen/dimension10dp"
               android:singleLine="true"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="@dimen/dimension20dp"
               android:imeOptions="actionNext"
               /><requestFocus />
       </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilBdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2"
            android:paddingBottom="@dimen/dimension8dp"
            android:paddingLeft="@dimen/dimension30dp"
            android:paddingRight="@dimen/dimension30dp"
            android:visibility="gone"
            android:gravity="bottom"
            >
            <!--app:hintTextAppearance="@style/CustomTextAppearance"-->
            <AutoCompleteTextView
                android:id="@+id/txtBdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="Birth Date"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingTop="@dimen/dimension10dp"
                android:paddingBottom="@dimen/dimension10dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimension20dp"
                android:imeOptions="actionNext"
                /><requestFocus />
        </android.support.design.widget.TextInputLayout>


       <android.support.design.widget.TextInputLayout
           android:id="@+id/tilHeight"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tilGender"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:gravity="bottom"
           >
           <AutoCompleteTextView
               android:id="@+id/txtHeight"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Height(Ft-Inches)"
               android:paddingLeft="@dimen/dimension15dp"
               android:paddingTop="@dimen/dimension10dp"
               android:paddingBottom="@dimen/dimension10dp"
               android:inputType="phone"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="@dimen/dimension20dp"
               android:imeOptions="actionNext"
               android:nextFocusDown="@+id/txtWeight"
               /><requestFocus />
       </android.support.design.widget.TextInputLayout>
       <android.support.design.widget.TextInputLayout
           android:id="@+id/tilWeight"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tilHeight"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:gravity="bottom"
           >
           <AutoCompleteTextView
               android:id="@+id/txtWeight"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Weight(lbs)"
               android:paddingLeft="@dimen/dimension15dp"
               android:paddingTop="@dimen/dimension10dp"
               android:paddingBottom="@dimen/dimension10dp"
               android:inputType="number"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="@dimen/dimension20dp"
               android:imeOptions="actionNext"
               /><requestFocus />
       </android.support.design.widget.TextInputLayout>
       <com.mindyourelders.MyHealthCareWishes.customview.MySpinner
           android:id="@+id/spinnerEyes"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dimension85dp"
           android:layout_marginLeft="@dimen/dimension35dp"
           android:layout_marginRight="@dimen/dimension35dp"
           app:ms_arrowColor="@color/colorBlue"
           app:ms_arrowSize="16dp"
           app:ms_floatingLabelText="Eyes Color"
           app:ms_hint="hint"
           app:ms_multiline="true"
           android:layout_below="@+id/tilWeight"
           custom:ms_floatingLabelColor="@color/colorBlue"
           custom:ms_hintColor="@color/colorDarkGray"
           />
       <View
           android:id="@+id/view3"
           android:layout_height="@dimen/dimension20dp"
           android:layout_width="match_parent"
           android:layout_marginBottom="@dimen/dimension15dp"
           android:layout_marginTop="@dimen/dimension15dp"
           android:background="@color/colorLightGray"
           android:layout_below="@+id/spinnerEyes"
           >
       </View>
       <TextView
           android:id="@+id/txtLiving"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:layout_marginLeft="@dimen/dimension10dp"
           android:paddingRight="@dimen/dimension30dp"
           android:paddingTop="@dimen/dimension8dp"
           android:text="Do you live alone?"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/dimension20dp"
           android:layout_below="@+id/view3"
           />
       <RadioGroup
           android:id="@+id/rgLive"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/txtLiving"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:paddingTop="@dimen/dimension8dp"
           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/rbYesLive"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Yes"
               android:textSize="@dimen/dimension20dp"
               android:layout_marginLeft="@dimen/dimension20dp"
               />
           <RadioButton
               android:id="@+id/rbNoLive"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="No"
               android:textSize="@dimen/dimension20dp"
               android:layout_marginLeft="@dimen/dimension20dp"
               />
       </RadioGroup>
       <RelativeLayout
           android:id="@+id/rlLive"
           android:layout_below="@+id/rgLive"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dimension50dp"
           android:visibility="gone"
           >
       <CheckBox
           android:id="@+id/chkChild"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Children"
           android:textSize="@dimen/dimension20dp"
           />
           <CheckBox
               android:id="@+id/chkFriend"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Friend"
               android:textSize="@dimen/dimension20dp"
               android:layout_below="@+id/chkChild"
               />
           <CheckBox
               android:id="@+id/chkGrandParent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Grand Parents"
               android:textSize="@dimen/dimension20dp"
               android:layout_below="@+id/chkFriend"
               />
           <CheckBox
               android:id="@+id/chkParent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Parents"
               android:textSize="@dimen/dimension20dp"
               android:layout_below="@+id/chkGrandParent"
               />
           <CheckBox
               android:id="@+id/chkSpouse"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Spouse"
               android:textSize="@dimen/dimension20dp"
               android:layout_below="@+id/chkParent"
               />
           <CheckBox
               android:id="@+id/chkOther"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Significant Other"
               android:textSize="@dimen/dimension20dp"
               android:layout_below="@+id/chkSpouse"
               />
           <android.support.design.widget.TextInputLayout
               android:id="@+id/tilOther"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/chkOther"
               android:paddingBottom="@dimen/dimension8dp"
               android:paddingLeft="@dimen/dimension30dp"
               android:paddingRight="@dimen/dimension30dp"
               android:gravity="bottom"
               android:visibility="gone"
               >
               <AutoCompleteTextView
                   android:id="@+id/txtOther"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Other(Specify)"
                   android:paddingLeft="@dimen/dimension15dp"
                   android:paddingTop="@dimen/dimension10dp"
                   android:paddingBottom="@dimen/dimension10dp"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimension20dp"
                   android:imeOptions="actionNext"
                   /><requestFocus />
           </android.support.design.widget.TextInputLayout>
       </RelativeLayout>
       <View
           android:id="@+id/view12"
           android:layout_height="@dimen/dimension20dp"
           android:layout_width="match_parent"
           android:layout_marginBottom="@dimen/dimension15dp"
           android:layout_marginTop="@dimen/dimension15dp"
           android:background="@color/colorLightGray"
           android:layout_below="@+id/rlLive"
           >
       </View>
       <android.support.design.widget.TextInputLayout
           android:id="@+id/tilProfession"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/view12"
           android:paddingBottom="@dimen/dimension8dp"
           android:paddingLeft="@dimen/dimension30dp"
           android:paddingRight="@dimen/dimension30dp"
           android:gravity="bottom"
           >
           <AutoCompleteTextView
               android:id="@+id/txtProfession"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Profession"
               android:paddingLeft="@dimen/dimension15dp"
