        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension60dp"
            android:background="@color/colorBlue"
            android:layout_below="@+id/rlProfile"
            ></RelativeLayout>
    <!--RoW One-->
    <LinearLayout
        android:id="@+id/llRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rlProfile"
        android:layout_marginLeft="@dimen/dimension10dp"
        android:layout_marginRight="@dimen/dimension10dp"
        android:gravity="center_horizontal"

        >
        <!--OVERVIEW-->
        <RelativeLayout
            android:id="@+id/rlEmergencyContact"
           android:layout_width="@dimen/dimension140dp"
            android:layout_height="@dimen/dimension145dp"
            android:layout_margin="@dimen/dimension10dp"
            android:layout_weight="1"
            android:background="@drawable/rlborder"
            android:elevation="@dimen/dimension10dp"

            >
            <ImageView
                android:id="@+id/imgECCount"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:layout_marginTop="@dimen/dimension20dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/imgECLogo"
                android:layout_width="@dimen/dimension60dp"
                android:layout_height="@dimen/dimension60dp"
                android:src="@drawable/ic_contacts"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:id="@+id/txtEmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension60dp"
                android:layout_below="@+id/imgECLogo"
                android:layout_centerHorizontal="true"
                android:textScaleX="1.5"
                android:padding="@dimen/dimension5dp"
                android:text="CONTACTS AND MEDICAL INFO"
                android:textColor="@color/colorBlackDark"
                android:textSize="@dimen/dimension13dp"
                android:textStyle="normal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimension10dp"
                />
        </RelativeLayout>
        </RelativeLayout>

        <!--CARE PLAN-->
        <RelativeLayout
            android:id="@+id/rlCarePlan"
           android:layout_width="@dimen/dimension140dp"
            android:layout_height="@dimen/dimension145dp"
            android:layout_weight="1"
            android:background="@drawable/rlborder"
            android:layout_margin="@dimen/dimension10dp"
            android:elevation="@dimen/dimension10dp"

            >
            <ImageView
                android:id="@+id/imgCPCount"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                android:visibility="gone"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/imgCPLogo"
                android:layout_width="@dimen/dimension60dp"
                android:layout_height="@dimen/dimension60dp"
                android:src="@drawable/careplans"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:id="@+id/txtCarePlan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension60dp"
                android:padding="@dimen/dimension5dp"
                android:text="ADV DIRECTIVES OTHER DOCUMENTS"
                android:textColor="@color/colorBlackDark"
                android:textStyle="normal"
                android:textSize="@dimen/dimension13dp"
                android:gravity="center_horizontal"
                android:textScaleX="1.5"
                android:layout_below="@+id/imgCPLogo"
                android:layout_marginTop="@dimen/dimension10dp"

                />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!--Row Two-->

    <LinearLayout
    android:id="@+id/llRow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/llRow1"
        android:layout_marginLeft="@dimen/dimension10dp"
        android:layout_marginRight="@dimen/dimension10dp"
       >
    <!--EMrgency-->
    <RelativeLayout
        android:id="@+id/rlSpecialist"
       android:layout_width="@dimen/dimension140dp"
        android:layout_height="@dimen/dimension145dp"
        android:background="@drawable/rlborder"
        android:layout_margin="@dimen/dimension10dp"
        android:elevation="@dimen/dimension10dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/imgSpecialistCount"
            android:layout_width="@dimen/dimension40dp"
            android:layout_height="@dimen/dimension40dp"
            android:src="@drawable/ic_check"
            android:layout_marginTop="@dimen/dimension20dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:id="@+id/imgSpecialistLogo"
            android:layout_width="@dimen/dimension60dp"
            android:layout_height="@dimen/dimension60dp"
            android:src="@drawable/speci"
            android:layout_centerHorizontal="true"

            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txtSpecialist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimension60dp"
            android:padding="@dimen/dimension5dp"
            android:textScaleX="1.5"
            android:text="SPECIALISTS"
            android:textColor="@color/colorBlackDark"
            android:textStyle="normal"
            android:textSize="@dimen/dimension13dp"
            android:layout_below="@+id/imgSpecialistLogo"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimension10dp"
            />
      </RelativeLayout>
    </RelativeLayout>

    <!--CARE PLAN-->
    <RelativeLayout
        android:id="@+id/rlInsuranceCard"
       android:layout_width="@dimen/dimension140dp"
        android:layout_height="@dimen/dimension145dp"
        android:background="@drawable/rlborder"
        android:layout_margin="@dimen/dimension10dp"
        android:elevation="@dimen/dimension10dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/imgInsuranceCardCount"
            android:layout_width="@dimen/dimension40dp"
            android:layout_height="@dimen/dimension40dp"
            android:src="@drawable/ic_check"
            android:layout_marginTop="@dimen/dimension20dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:id="@+id/imgInsuranceCardLogo"
            android:layout_width="@dimen/dimension60dp"
            android:layout_height="@dimen/dimension60dp"
            android:src="@drawable/cardss"
            android:layout_centerHorizontal="true"

            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txtInsuranceCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimension60dp"
            android:padding="@dimen/dimension5dp"
            android:text="INSURANCE INFO AND CARDS"
            android:textScaleX="1.5"
            android:textColor="@color/colorBlackDark"
            android:textStyle="normal"
            android:textSize="@dimen/dimension13dp"
            android:layout_below="@+id/imgInsuranceCardLogo"
           android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimension10dp"
            />
            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/llRow3"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/llRow2"
        android:layout_marginLeft="@dimen/dimension10dp"
        android:layout_marginRight="@dimen/dimension10dp"
        >
        <!--EMrgency-->
        <RelativeLayout
            android:id="@+id/rlEmergencyEvent"
           android:layout_width="@dimen/dimension140dp"
            android:layout_height="@dimen/dimension145dp"
            android:background="@drawable/rlborder"
            android:layout_margin="@dimen/dimension10dp"
            android:elevation="@dimen/dimension10dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/imgEventCount"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                android:visibility="gone"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/imgEventLogo"
                android:layout_width="@dimen/dimension60dp"
                android:layout_height="@dimen/dimension60dp"
                android:src="@drawable/events"
                android:layout_centerHorizontal="true"

                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/txtEmergencyEvent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension60dp"
                android:padding="@dimen/dimension5dp"
                android:text="EVENT NOTES"
                android:textScaleX="1.5"
                android:textColor="@color/colorBlackDark"
                android:textStyle="normal"
                android:textSize="@dimen/dimension13dp"
                android:layout_below="@+id/imgEventLogo"

                android:layout_marginTop="@dimen/dimension10dp"
                android:gravity="center_horizontal"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--CARE PLAN-->
        <RelativeLayout
            android:id="@+id/rlPrescription"
           android:layout_width="@dimen/dimension140dp"
            android:layout_height="@dimen/dimension145dp"
            android:background="@drawable/rlborder"
            android:layout_margin="@dimen/dimension10dp"
            android:elevation="@dimen/dimension10dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/imgPrescriptionCount"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                android:visibility="gone"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
            android:id="@+id/imgPrescriptionLogo"
            android:layout_width="@dimen/dimension60dp"
            android:layout_height="@dimen/dimension60dp"
            android:src="@drawable/treat"
            android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
            />

            <TextView
                android:id="@+id/txtPrescription"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension60dp"
                android:padding="@dimen/dimension5dp"
                android:text="PRESCRIPTIONS"
                android:textScaleX="1.5"
                android:textColor="@color/colorBlackDark"
                android:textStyle="normal"
                android:textSize="@dimen/dimension13dp"
                android:layout_below="@+id/imgPrescriptionLogo"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimension10dp"
                />
           </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgShareLocation"
        android:layout_width="@dimen/dimension60dp"
        android:layout_height="@dimen/dimension60dp"
        android:src="@drawable/ic_share_location"
        android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/dimension20dp"
        android:layout_below="@+id/llRow3"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/txtShareLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgShareLocation"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dimension10dp"
        android:text="Share Location"
        android:textStyle="normal"
        android:textColor="@color/colorBlackDark"
        android:textSize="@dimen/dimension15dp"
        android:visibility="gone"
        />
</RelativeLayout>

</ScrollView>
    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlackDark"
        android:alpha="0.65"
        >
        <com.mindyourelders.MyHealthCareWishes.customview.TextViewRomanS
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courtesy of Barbara Keller from MYE."
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimension15dp"
            android:textStyle="normal"
            android:gravity="center"
            android:padding="@dimen/dimension5dp"
            />
    </LinearLayout>
</RelativeLayout>