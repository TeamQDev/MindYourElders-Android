        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension90dp"
            android:background="@color/colorBlue"
            android:layout_below="@+id/rlProfile"
            ></RelativeLayout>
    <!--RoW One-->
        <ScrollView
            android:layout_below="@+id/rlProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_above="@+id/llbottom"
            android:layout_marginTop="@dimen/dimension10dp"
            >
        <RelativeLayout
            android:layout_above="@+id/llbottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
    <LinearLayout
        android:id="@+id/llRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginLeft="@dimen/dimension10dp"
        android:layout_marginRight="@dimen/dimension10dp"
        android:gravity="center_horizontal"

        >
        <!--OVERVIEW-->
        <RelativeLayout
            android:id="@+id/rlEmergencyContact"
            android:layout_width="@dimen/dimension165dp"
            android:layout_height="@dimen/dimension165dp"
            android:layout_margin="@dimen/dimension10dp"
            android:layout_weight="1"
            android:background="@drawable/rlborderone"
            android:elevation="@dimen/dimension10dp"

            >

            <ImageView
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:layout_marginTop="@dimen/dimension20dp"
                android:src="@drawable/ic_check"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/imgECLogo"
                    android:layout_width="@dimen/dimension50dp"
                    android:layout_height="@dimen/dimension50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"

                    android:scaleType="fitXY"
                    android:src="@drawable/ic_contacts" />

                <TextView
                    android:id="@+id/txtEmergencyContact"
                    android:text="PERSONAL &amp; MEDICAL PROFILE &amp; EMERGENCY CONTACTS "
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimension90dp"
                    android:padding="@dimen/dimension5dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="normal"
                    android:textSize="@dimen/dimension16dp"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/imgECLogo"
                    android:layout_marginTop="@dimen/dimension10dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--CARE PLAN-->
        <RelativeLayout
            android:id="@+id/rlCarePlan"
           android:layout_width="@dimen/dimension165dp"
            android:layout_height="@dimen/dimension165dp"
            android:layout_weight="1"
            android:background="@drawable/rlbordertwo"
            android:layout_margin="@dimen/dimension10dp"
            android:elevation="@dimen/dimension10dp"

            >
            <ImageView
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                android:visibility="gone"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/imgCPLogo"
                android:layout_width="@dimen/dimension50dp"
                android:layout_height="@dimen/dimension50dp"
                android:src="@drawable/careplans"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:id="@+id/txtCarePlan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension90dp"
                android:padding="@dimen/dimension5dp"
                android:text="ADVANCE DIRECTIVES &amp; OTHER DOCUMENTS"
                android:textColor="@color/colorWhite"
                android:textStyle="normal"
                android:textSize="@dimen/dimension16dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/imgCPLogo"
                android:layout_marginTop="@dimen/dimension10dp"

                />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!--Row Two-->

    <LinearLayout
    android:id="@+id/llRow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/llRow1"
        android:layout_marginLeft="@dimen/dimension10dp"
        android:layout_marginRight="@dimen/dimension10dp"
       >
    <!--EMrgency-->
        <RelativeLayout
            android:id="@+id/rlSpecialist"
            android:layout_width="@dimen/dimension165dp"
            android:layout_height="@dimen/dimension165dp"
            android:layout_margin="@dimen/dimension10dp"
            android:layout_weight="1"
            android:background="@drawable/rlborderthree"
            android:elevation="@dimen/dimension10dp">

            <ImageView
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:layout_marginTop="@dimen/dimension20dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                android:id="@+id/imageView" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView">

                <ImageView
                    android:id="@+id/imgSpecialistLogo"
                    android:layout_width="@dimen/dimension50dp"
                    android:layout_height="@dimen/dimension50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"

                    android:src="@drawable/speci" />

                <TextView
                    android:id="@+id/txtSpecialist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimension90dp"
                    android:layout_below="@+id/imgSpecialistLogo"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimension5dp"
                    android:text="SPECIALTY CONTACTS"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimension16dp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>

        <!--CARE PLAN-->
    <RelativeLayout
        android:id="@+id/rlInsuranceCard"
       android:layout_width="@dimen/dimension165dp"
        android:layout_height="@dimen/dimension165dp"
        android:background="@drawable/rlbordersix"
        android:layout_margin="@dimen/dimension10dp"
        android:elevation="@dimen/dimension10dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="@dimen/dimension40dp"
            android:layout_height="@dimen/dimension40dp"
            android:src="@drawable/ic_check"
            android:layout_marginTop="@dimen/dimension20dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:id="@+id/imgInsuranceCardLogo"
            android:layout_width="@dimen/dimension50dp"
            android:layout_height="@dimen/dimension50dp"
            android:src="@drawable/cardss"
            android:layout_centerHorizontal="true"

            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txtInsuranceCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimension90dp"
            android:padding="@dimen/dimension5dp"
            android:text="INSURANCE INFORMATION AND CARDS"
            android:textColor="@color/colorWhite"
            android:textStyle="normal"
            android:textSize="@dimen/dimension16dp"
            android:layout_below="@+id/imgInsuranceCardLogo"
           android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimension10dp"
            />
            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/llRow3"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/llRow2"
        android:layout_marginLeft="@dimen/dimension10dp"
        android:layout_marginRight="@dimen/dimension10dp"
        >
        <!--EMrgency-->
        <RelativeLayout
            android:id="@+id/rlEmergencyEvent"
           android:layout_width="@dimen/dimension165dp"
            android:layout_height="@dimen/dimension165dp"
            android:background="@drawable/rlborderfour"
            android:layout_margin="@dimen/dimension10dp"
            android:elevation="@dimen/dimension10dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                android:visibility="gone"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/imgEventLogo"
                android:layout_width="@dimen/dimension50dp"
                android:layout_height="@dimen/dimension50dp"
                android:src="@drawable/events"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/txtEmergencyEvent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension90dp"
                android:padding="@dimen/dimension5dp"
                android:text="NOTES &amp; APPOINTMENT CHECKLIST"
                android:textColor="@color/colorWhite"
                android:textStyle="normal"
                android:textSize="@dimen/dimension16dp"
                android:layout_below="@+id/imgEventLogo"

                android:layout_marginTop="@dimen/dimension10dp"
                android:gravity="center_horizontal"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--CARE PLAN-->
        <RelativeLayout
            android:id="@+id/rlPrescription"
            android:layout_width="@dimen/dimension165dp"
            android:layout_height="@dimen/dimension165dp"
            android:layout_margin="@dimen/dimension10dp"
            android:layout_weight="1"
            android:background="@drawable/rlborderfive"
            android:elevation="@dimen/dimension10dp">

            <ImageView
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:layout_marginTop="@dimen/dimension20dp"
                android:src="@drawable/ic_check"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imgPrescriptionLogo"
                    android:layout_width="@dimen/dimension50dp"
                    android:layout_height="@dimen/dimension50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/treat" />

                <TextView
                    android:id="@+id/txtPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimension90dp"
                    android:layout_below="@+id/imgPrescriptionLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimension5dp"
                    android:text="PRESCRIPTION TRACKER"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimension16dp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
        </RelativeLayout>
        </ScrollView>


    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.mindyourelders.MyHealthCareWishes.customview.TextViewRomanS
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courtesy of Barbara Keller from MYE."
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimension19dp"
            android:textStyle="normal"
            android:gravity="center"
            android:padding="@dimen/dimension10dp"
            />
    </LinearLayout>
        </RelativeLayout>
</RelativeLayout>