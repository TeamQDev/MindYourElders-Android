<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.mindyourelders.MyHealthCareWishes.HomeActivity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_above="@+id/llSplash"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            >
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/dimension0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/splash_one"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/dimension0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/splash_two"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <ImageView
            android:id="@+id/img3"
            android:layout_width="@dimen/dimension0dp"
            android:layout_height="match_parent"
            android:src="@drawable/splash_three"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="@dimen/dimension0dp"
            android:layout_height="match_parent"
            android:src="@drawable/splash_four"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNew"
            style="@style/SplashButton"
            android:layout_width="@dimen/dimension0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:text="I'm New Here" />

        <TextView
            android:id="@+id/txtRegistered"
            style="@style/SplashButton"
            android:layout_width="@dimen/dimension0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:text="I'm Registered" />
    </LinearLayout>

</RelativeLayout>
