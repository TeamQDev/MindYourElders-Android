<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <ImageView
        android:id="@+id/imgSynch"
        android:layout_width="@dimen/dimension30dp"
        android:layout_height="@dimen/dimension30dp"
        android:src="@drawable/synch"
        android:layout_marginRight="@dimen/dimension10dp"
        android:layout_marginTop="@dimen/dimension10dp"
        android:layout_alignParentRight="true"
        />
    <RelativeLayout
        android:id="@+id/rlProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimension25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/dimension100dp"
            android:layout_height="@dimen/dimension100dp"
            android:src="@drawable/circular_profile"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/txtWelcome"
            android:padding="@dimen/dimension5dp"
            android:text="Martha Matheson"
            android:textColor="@color/colorDarkBlue"
            android:layout_marginLeft="@dimen/dimension35dp"
            android:textSize="@dimen/dimension24dp" />
        <TextView
            android:id="@+id/txtRelation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text= "SELF"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/dimension16dp"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_marginLeft="@dimen/dimension35dp"
            android:layout_marginBottom="@dimen/dimension5dp"
            android:paddingLeft="@dimen/dimension6dp"
            android:layout_below="@+id/txtName"
            />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimension5dp"
            android:text="#203,10 Downing Street, los Angeles, California."
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/dimension17dp"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/txtRelation"
            android:layout_marginLeft="@dimen/dimension5dp"
            android:drawableLeft="@drawable/markers"
            android:gravity="top|left"
            android:drawablePadding="@dimen/dimension10dp"
            />

    </RelativeLayout>

    <!--RoW One-->
    <LinearLayout
        android:id="@+id/llRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rlProfile"
        android:layout_marginTop="@dimen/dimension5dp"
        android:layout_marginLeft="@dimen/dimension20dp"
        android:layout_marginRight="@dimen/dimension20dp"
        >
        <!--OVERVIEW-->
        <RelativeLayout
            android:id="@+id/rlOverview"
            android:layout_width="@dimen/dimension190dp"
            android:layout_height="@dimen/dimension190dp"
            android:layout_marginRight="@dimen/dimension10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_blue_bg"

            >

            <ImageView
                android:id="@+id/imgOVCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension20dp"
                android:src="@drawable/ic_check" />

            <ImageView
                android:id="@+id/imgOVLogo"
                android:layout_width="@dimen/dimension75dp"
                android:layout_height="@dimen/dimension75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimension30dp"
                android:src="@drawable/ic_overview" />

            <TextView
                android:id="@+id/txtOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgOVLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimension10dp"
                android:padding="@dimen/dimension5dp"
                android:text="OVERVIEW"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimension22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtOverview"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/dimension5dp"
                android:text="Health Care Wishes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimension17dp" />
        </RelativeLayout>

        <!--CARE PLAN-->
        <RelativeLayout
            android:id="@+id/rlCarePlan"
            android:layout_width="@dimen/dimension190dp"
            android:layout_height="@dimen/dimension190dp"
            android:background="@drawable/ic_blue_bg"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimension10dp"
            >
            <ImageView
                android:id="@+id/imgCPCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                />

            <ImageView
                android:id="@+id/imgCPLogo"
                android:layout_width="@dimen/dimension75dp"
                android:layout_height="@dimen/dimension75dp"
                android:src="@drawable/ic_careplan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimension30dp"
                />

            <TextView
                android:id="@+id/txtCarePlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension5dp"
                android:text="CARE PLAN"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimension10dp"
                android:textSize="@dimen/dimension22dp"
                android:layout_below="@+id/imgCPLogo"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/txtSubCarePlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCarePlan"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/dimension5dp"
                android:text="(PDF/WORD) DOCS"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimension17dp" />
        </RelativeLayout>
    </LinearLayout>

    <!--Row Two-->

    <LinearLayout
        android:id="@+id/llRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/llRow1"
        android:layout_marginTop="@dimen/dimension20dp"
        android:layout_marginLeft="@dimen/dimension20dp"
        android:layout_marginRight="@dimen/dimension20dp"
        >
        <!--OVERVIEW-->
        <RelativeLayout
            android:id="@+id/rlEmergency"
            android:layout_width="@dimen/dimension190dp"
            android:layout_height="@dimen/dimension190dp"
            android:background="@drawable/ic_blue_bg"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dimension10dp"
            >
            <ImageView
                android:id="@+id/imgEmerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                />

            <ImageView
                android:id="@+id/imgEmerLogo"
                android:layout_width="@dimen/dimension75dp"
                android:layout_height="@dimen/dimension75dp"
                android:src="@drawable/ic_emergency"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimension30dp"
                />

            <TextView
                android:id="@+id/txtEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension5dp"
                android:text="EMERGENCY"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/dimension22dp"
                android:layout_below="@+id/imgEmerLogo"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/txtSubEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmergency"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/dimension5dp"
                android:text="Information"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimension17dp" />
        </RelativeLayout>

        <!--CARE PLAN-->
        <RelativeLayout
            android:id="@+id/rlInsurance"
            android:layout_width="@dimen/dimension190dp"
            android:layout_height="@dimen/dimension190dp"
            android:background="@drawable/ic_blue_bg"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimension10dp"
            >
            <ImageView
                android:id="@+id/imgInsuranceCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:layout_marginTop="@dimen/dimension20dp"
                />

            <ImageView
                android:id="@+id/imgInsuranceLogo"
                android:layout_width="@dimen/dimension75dp"
                android:layout_height="@dimen/dimension75dp"
                android:src="@drawable/ic_insurance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimension30dp"
                />

            <TextView
                android:id="@+id/txtInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension5dp"
                android:text="SPECIALISTS"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/dimension22dp"
                android:layout_below="@+id/imgInsuranceLogo"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/txtSubInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInsurance"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/dimension5dp"
                android:text="Health Specialists"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimension17dp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgShareLocation"
        android:layout_width="@dimen/dimension60dp"
        android:layout_height="@dimen/dimension60dp"
        android:src="@drawable/ic_share_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimension30dp"
        android:layout_below="@+id/llRow2"
        />
    <TextView
        android:id="@+id/txtShareLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgShareLocation"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dimension10dp"
        android:text="Share Location"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimension17dp" />
</RelativeLayout>
</ScrollView>